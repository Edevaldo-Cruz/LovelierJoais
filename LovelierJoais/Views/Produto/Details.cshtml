@model ProdutoListViewModel
@{
    Layout = "_LayoutSecundario";
}
<div class="container">
    <div class="row div-top-padrao">
        <div class="card">
            <div class="text-center">
                <img width="350" height="350" src="@ViewBag.Selecionado.ImagemUrl" class="img-fluid" alt="">
            </div>
           
            <div class="card-block">
                <h2 class="card-title">@ViewBag.Selecionado.Nome</h2>                 
                <p class="card-text"><h5>@ViewBag.Selecionado.DescricaoDetalhada</h5></p>
                <h5>@ViewBag.Selecionado.Preco</h5>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Produto" asp-action="List"
                       class="btn btn-outline-info">Ver todos os produtos</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-produtoId="@ViewBag.Selecionado.ProdutoId">
                        Adicionar @ViewBag.Selecionado.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>