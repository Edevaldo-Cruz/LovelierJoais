@model CarrinhoCompraViewModel
@{
    Layout = "_LayoutSecundario";
}
<div class="container">
    <div class="row div-top-padrao">

        <div>
            <h4>Sacola de compra: </h4>
        </div>
        <hr />
        @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
        {
            <div style="background-color: #CCCCCC; display: flex; margin: 7.5px 0 15px 0; padding: 15px">
                <div>
                    <img src="@item.Produto.ImagemUrl" width="175" height="175" />
                </div>
                <div style="padding: 15px 15px 0 15px">
                    <h3 class="text-left">@item.Produto.Nome</h3>
                    <p>@item.Produto.DescricaoDetalhada</p>
                    <p class="text-right">@item.Produto.Preco.ToString("c")</p>
                    <p class="text-center">@item.Quantidade</p>

                    <div class="text-right">
                        <p>Total:</p>
                        @((item.Quantidade * item.Produto.Preco).ToString("c"))
                    </div>

                    <div class="text-center">
                        <a asp-controller="CarrinhoCompra"
                       asp-action="RemoverItemDoCarrinhoCompra"
                       asp-route-produtoId="@item.Produto.ProdutoId">
                            <img src="~/images/delete.png" width="20" height="20" />
                        </a>
                    </div>
                </div>
            </div>
        }


        <div class="text-right">
            <div class="btn-group">
                <div>
                    <a class="btn btn-success car-botao-encerrar" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                </div>
                &nbsp;&nbsp;&nbsp;
                <div>
                    <a class="btn btn-primary car-botao-continuar" asp-controller="Produto" asp-action="List">Continuar Comprando</a>
                </div>
            </div>

        </div>

    </div>
</div>