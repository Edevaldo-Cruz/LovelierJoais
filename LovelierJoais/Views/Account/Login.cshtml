@model LoginViewModel
@{
    Layout = "_LayoutLogin";
}
<div class="container" style="margin-top: 30px; ">
    <div>
        <a class="row" style="cursor: pointer" asp-controller="home" asp-action="Index">
            <div class="col">
                <img src="~/images/arrow-left.png" alt="icone retorna para pagina anterior" />            
            </div>
        </a>
    </div>
    <div style="width: 500px; background-color: #FFF; padding: 30px; margin-left: auto; margin-right: auto; border: solid; border-color: #7E2228">
        <div class="row">
            <div style="height: 600px" class="col-12 col-md-12 col-lg-12">
                <div style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
                    <img src="~/images/logoBlack.png" width="150px" height="150px" />
                </div>
                <h4 style="display: flex; flex-direction: row; justify-content: center; align-items: center; color: #7E2228">Login</h4>
                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="form-group">
                        <label asp-for="UserName" style="color: #7E2228" class="control-label"></label>
                        <div>
                            <input style="border-radius: 16px; border-color: #7E2228" asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 15px">
                        <label asp-for="Password" style="color: #7E2228" class="control-label float-left"> Senha</label>
                        <div>
                            <input style="border-radius: 16px; border-color: #7E2228" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    @* <div class="form-group">
                    <div>
                    <input type="submit" class="btn btn-success" value="Log in" />
                    </div>
                    </div>*@

                    <div style="margin-top: 30px;" class="btn-group col-12">
                        <div class="col-12 row justify-content-end">
                            <input type="submit" class="btn btn-success car-botao-encerrar" value="Login" />
                        </div>
                        &nbsp;&nbsp;&nbsp;
                    </div>

                </form>

                <div style="margin-top: 30px; display: flex; flex-direction: row; justify-content: center; align-items: center;" class="col-12 col-md-12 col-lg-12">
                    <a style="width: 350px" class="btn btn-primary car-botao-continuar centro" asp-controller="Account" asp-action="Register">Registre-se</a>
                </div>
                <hr />
                <p style="color: #7E2228">Visite nossas redes sociais:</p>
                <div class="row">
                    <a class="col" style="cursor: pointer;" href="https://www.instagram.com/">
                        <img class="float-end" src="~/images/facebook.png" width="30" height="30" alt="icone Facebook"/>
                    </a>
                    <a class="col" style="cursor: pointer;" href="https://www.instagram.com/">
                         <img src="~/images/instagram.png"  width="35" height="35" alt="icone Instagram" />
                    </a>                   
                </div>
                <hr/>
            </div>
        </div>
    </div>
</div>



