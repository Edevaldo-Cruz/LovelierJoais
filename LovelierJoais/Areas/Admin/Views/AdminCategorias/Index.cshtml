@model IEnumerable<LovelierJoais.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Lista Categorias</h1>
    <p>
        <a asp-action="Create">Criar nova categoria</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoriaNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.CategoriaId">Detahes</a> |
                        <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


